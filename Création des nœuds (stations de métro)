// Création des contraintes et index pour chaque noeud
CREATE CONSTRAINT ON (l:Ligne1) ASSERT l.stop_id IS UNIQUE;
CREATE CONSTRAINT ON (l:Ligne2) ASSERT l.stop_id IS UNIQUE;
CREATE CONSTRAINT ON (l:Ligne3) ASSERT l.stop_id IS UNIQUE;
CREATE CONSTRAINT ON (l:Ligne3b) ASSERT l.stop_id IS UNIQUE;
CREATE CONSTRAINT ON (l:Ligne4) ASSERT l.stop_id IS UNIQUE;
CREATE CONSTRAINT ON (l:Ligne5) ASSERT l.stop_id IS UNIQUE;
CREATE CONSTRAINT ON (l:Ligne6) ASSERT l.stop_id IS UNIQUE;
CREATE CONSTRAINT ON (l:Ligne7) ASSERT l.stop_id IS UNIQUE;
CREATE CONSTRAINT ON (l:Ligne7b) ASSERT l.stop_id IS UNIQUE;
CREATE CONSTRAINT ON (l:Ligne8) ASSERT l.stop_id IS UNIQUE;
CREATE CONSTRAINT ON (l:Ligne9) ASSERT l.stop_id IS UNIQUE;
CREATE CONSTRAINT ON (l:Ligne10) ASSERT l.stop_id IS UNIQUE;
CREATE CONSTRAINT ON (l:Ligne11) ASSERT l.stop_id IS UNIQUE;
CREATE CONSTRAINT ON (l:Ligne12) ASSERT l.stop_id IS UNIQUE;
CREATE CONSTRAINT ON (l:Ligne13) ASSERT l.stop_id IS UNIQUE;
CREATE CONSTRAINT ON (l:Ligne14) ASSERT l.stop_id IS UNIQUE;

// Chargement du fichier csv des stations en indiquant qu'il existe une ligne d'entête
// Creation des noeuds pour la ligne 1 (stops1) 
LOAD CSV WITH HEADERS FROM "https://raw.githubusercontent.com/chrissie705/hello-world/chrissie705-patch-1/stops1.csv" AS row
MERGE (l:Ligne1{stop_id:row.stop_id})
ON CREATE SET l.name = row.stop_name, // Nom de la station
 l.adresse = row.stop_desc, // adresse de la station
 l.latitude = row.stop_lat, // latitude de la station
 l.longitude = row.top_lon, // longitude de la station
 l.location_type = row.location_type;  

